# Production Configuration
STORAGE_TYPE=s3

# S3 Configuration (set these in your production environment)
# S3_BUCKET_NAME=your-production-bucket
# S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# Auto-delete files after 48 hours in production
AUTO_DELETE_HOURS=48

# Production settings
DEBUG=false
LOG_LEVEL=INFO

# For local production testing with local storage:
# STORAGE_TYPE=local
# LOCAL_UPLOAD_DIR=uploads
# AUTO_DELETE_HOURS=24